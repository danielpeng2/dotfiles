# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
command=~/dotfiles/.config/i3blocks/i3blocks_scripts/$BLOCK_NAME
separator_block_width=15
markup=none

[mediaplayer]
instance=spotify
interval=5
signal=10

[volume]
label=VOL
instance=Master
interval=once
signal=10

[iface]
#instance=wlan0
color=#00FF00
interval=10
#separator=false

[wifi]
#instance=wlp3s0
interval=10
separator=false

[memory]
label=MEM
separator=false
interval=30

[disk]
label=HOME
interval=30

[battery]
label=BAT
interval=30

[time]
command=date '+%Y-%m-%d %I:%M%p'
interval=5

