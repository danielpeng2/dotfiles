#!/bin/bash

temp_file=$(mktemp)

if [ $1 = "l" ]
then
    echo "Xft.dpi: 144" >> "$temp_file"
    xrandr --output VIRTUAL1 --off
    xrandr --output DP1 --off
    xrandr --output DP2-1 --off
    xrandr --output DP2-2 --off
    xrandr --output HDMI2 --off
    xrandr --output HDMI1 --off
    xrandr --output DP2 --off
    xrandr --output eDP1 --mode 2256x1504 --pos 0x0 --rotate normal
elif [ $1 = "m" ]
then
    echo "Xft.dpi: 96" >> "$temp_file"
    xrandr --output VIRTUAL1 --off
    xrandr --output DP1 --off
    xrandr --output DP2-2 --mode 1920x1080 --pos 0x376 --rotate normal
    xrandr --output eDP1 --off
    xrandr --output DP2-1 --primary --mode 1920x1080 --pos 1920x208 --rotate right
    xrandr --output HDMI2 --off
    xrandr --output HDMI1 --off
    xrandr --output DP2 --off
else
    echo "Invalid argument passed"
fi

xrdb -merge "$temp_file"
i3 restart

rm "$temp_file"
